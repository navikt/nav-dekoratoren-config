{
  "$id": "https://json-schema.org/draft-07/schema",
  "title": "Task Analytics config",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "id"
    ],
    "properties": {
      "id": {
        "description": "Id for undersøkelsen",
        "type": "string"
      },
      "selection": {
        "description": "Prosentandels utvalg for undersøkelsen",
        "type": "number",
        "minimum": 0,
        "maximum": 100
      },
      "duration": {
        "description": "Start/slutt tidspunkt for undersøkelsen",
        "type": "object",
        "properties": {
          "start": {
            "type": "string",
            "format": "date-time"
          },
          "end": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "urls": {
        "description": "Url'er som skal inkluderes eller ekskluderes",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "url": {
              "type": "string"
            },
            "match": {
              "enum": [
                "exact",
                "startsWith"
              ]
            },
            "exclude": {
              "type": "boolean"
            }
          },
          "required": [
            "url",
            "match"
          ]
        }
      },
      "audience": {
        "description": "Målgrupper",
        "type": "array",
        "items": {
          "enum": [
            "privatperson",
            "arbeidsgiver",
            "samarbeidspartner"
          ]
        }
      },
      "language": {
        "description": "Språk",
        "type": "array",
        "items": {
          "enum": [
            "nb",
            "nn",
            "en",
            "se",
            "uk",
            "ru",
            "pl"
          ]
        }
      }
    }
  }
}